#!/bin/bash

# Show action
show_action () {
    echo -e "\033[34m\n"${1}"\033[00m";
    sleep 1;
}

# Show error
show_error() {
    echo -e "\nError: "${1};
}

# Create directory if does'nt exists
create_dir() {
    if ! test -d ${1}
    then
        show_action "- Create dir ${1}";
        mkdir -vp ${1}
    fi
}